# Job Hunter Bot Environment Configuration
# Copy this file to .env and update with your actual values

# Personal Information (REQUIRED)
JOB_HUNTER_NAME=Your Full Name
JOB_HUNTER_EMAIL=your.email@gmail.com
JOB_HUNTER_PHONE=+91XXXXXXXXXX

# Resume Configuration (REQUIRED)
RESUME_PATH=/path/to/your/resume.pdf

# Notification Settings (OPTIONAL but recommended)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url
EMAIL_FROM=your.email@gmail.com
EMAIL_PASSWORD=your_app_password

# Job Search Preferences (OPTIONAL)
PREFERRED_LOCATIONS=Bangalore,Mumbai,Remote
MIN_EXPERIENCE_YEARS=2
MAX_APPLICATIONS_PER_DAY=10
MINIMUM_MATCH_SCORE=60

# Platform Credentials (OPTIONAL - for enhanced features)
LINKEDIN_USERNAME=your.linkedin@email.com  # NOT USED due to TOS
LINKEDIN_PASSWORD=your_password             # NOT USED due to TOS

# Advanced Settings (OPTIONAL)
HEADLESS_BROWSER=true
BROWSER_TIMEOUT_SECONDS=30
PARALLEL_FETCHING=true

# Development/Testing (OPTIONAL)
MOCK_MODE=false
DEBUG_MODE=false
API_ONLY_MODE=false